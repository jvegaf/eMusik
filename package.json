{
  "name": "emusik",
  "version": "0.9.0",
  "license": "MIT",
  "main": "main/index.js",
  "author": {
    "name": "Jose Vega"
  },
  "description": "The music organizer for classic DJs",
  "keywords": [
    "music",
    "tagger",
    "manager",
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "repository": {
    "url": "https://github.com/jvegaf/eMusik"
  },
  "productName": "eMusik",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "stylelint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "dependencies": {
    "@emotion/react": "11.10.5",
    "@table-library/react-table-library": "4.0.24",
    "@vitejs/plugin-react": "1.2.0",
    "axios": "0.27.2",
    "electron-is-dev": "2.0.0",
    "googlethis": "1.3.0",
    "moment": "2.29.3",
    "music-metadata": "7.12.3",
    "node-fetch": "2.6.1",
    "node-id3": "0.2.3",
    "pino": "8.7.0",
    "pino-pretty": "9.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.32.1",
    "recursive-readdir": "2.2.2",
    "styled-components": "5.3.6",
    "uuid": "8.3.2",
    "vite": "2.8.6",
    "youtube-music-api": "1.0.6"
  },
  "devDependencies": {
    "@types/node": "17.0.22",
    "@types/node-fetch": "2.6.1",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/recursive-readdir": "2.2.1",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "10.4.4",
    "concurrently": "7.0.0",
    "electron": "17.1.2",
    "electron-builder": "22.14.13",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "postcss": "8.4.12",
    "prettier": "2.6.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.2"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    }
  }
}
